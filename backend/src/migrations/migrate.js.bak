        console.log(`  âš ï¸  ${eventId}: CSV íŒŒì¼ ì—†ìŒ`);
      } else {
        console.error(`  âŒ ${eventId} ë§ˆì´ê·¸ë ˆì´ì…˜ ì˜¤ë¥˜:`, error.message);
      }
    }
  }

  parseCSVLine(line) {
    const values = [];
    let current = '';
    let inQuotes = false;
    
    for (let j = 0; j < line.length; j++) {
      const char = line[j];
      if (char === '"') {
        inQuotes = !inQuotes;
      } else if (char === ',' && !inQuotes) {
        values.push(current.trim());
        current = '';
      } else {
        current += char;
      }
    }
    values.push(current.trim());
    
    return values;
  }

