{
  "name": "qr-entrance-system",
  "version": "1.0.0",
  "description": "QR 기반 입장 관리 시스템",
  "main": "backend/src/server.js",
  "scripts": {
    "start": "node backend/src/server.js",
    "dev": "nodemon backend/src/server.js",
    "test": "npx playwright test",
    "test:init-db": "node tests/e2e/setup/init-test-db.js",
    "test:e2e": "npm run test:init-db && npm test",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:e2e",
    "migrate": "node backend/src/migrations/migrate.js",
    "migrate:status": "node backend/src/migrations/migrate.js status"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "better-sqlite3": "^11.6.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^6.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "qrcode": "^1.5.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "sqlite": "^5.1.1"
  }
}
